
<header class="classic-menu" id="mynav" style="height:60px">
    <div id="header-container" class="px-lg-0 py-lg-0"> 
        <div id="logo" class="hide-ball" style="top:20px">
            <a class="ajax-link mx-3" data-type="page-transition" style="font-family:GraphikLightItalic;color:black" href="{{path('app_home')}}">
                Isalo    
            </a> 
        </div> 
        <div class="socials-wrap mx-3 mt-1 d-none d-xl-flex" style="display:flex;flex-direction:row-reverse;height: 50px;width: 50px;overflow: hidden;">  
            <div class="d-flex align-items-center">              	 
                <a class="parallax-element" href=" " target="_blank"><img class="" width="20px" src="{{asset('images/lang/'~app.request.locale~'.png')}}"></a> 
            </div>  
            <ol class="socials pt-3" style="position:absolute;top:15px;height: auto;line-height: 30px;position: relative;width: auto;text-align: center;bottom: 0;display: table;transform: translateX(15px);-webkit-transform: translateX(15px);">
                <div class="bg-white">

                {% for locale in locales %}
                    {% if locale != app.request.locale %} 
                        <li><span class="parallax-wrap "><a class="parallax-element" href="{{path('change_locale',{'locale': locale})}}"><img class="img-fluid w-50" src="{{asset('images/lang/'~locale~'.png')}}"></a></span></li> 
                    {% endif %}  
                {% endfor %}
 
                </div>
            </ol>                
        </div>
        <nav class="m-0 d-flex bg-white" style="background-color:white !important"> 
            <div class="nav-height w-100">
                <div class="outer w-100">
                    <div class="inner w-100">           
                        <ul data-breakpoint="1025" class="flexnav d-lg-flex d-block justify-content-around w-100">
                            <li class="link menu-timeline p-0"><a href="https://127.0.0.1:8000/#accueil"><span data-hover="Accueil">{% trans %}Accueil{% endtrans %}</span></a></li>  
                            <li class="link menu-timeline p-0"><a href="https://127.0.0.1:8000/#decouvrir"><span data-hover="Découvrir">{% trans %}Découvrir{% endtrans %}</span></a></li>  
                            <li class="link menu-timeline p-0"><a href="https://127.0.0.1:8000/#specificite"><span data-hover="Spécificités">{% trans %}Spécificités{% endtrans %}</span></a>
                                <ul class="p-2 pt-4 shadow-sm">
                                    <li><a class="ajax-link " href="{{path('app_paysage')}}" data-type="page-transition">{% trans %}Paysage{% endtrans %}</a></li>
                                    <li><a class="ajax-link" href="{{path('app_faune')}}" data-type="page-transition">{% trans %}Faune{% endtrans %}</a></li>
                                    <li><a class="ajax-link" href="{{path('app_flore')}}" data-type="page-transition">{% trans %}Flore{% endtrans %}</a></li> 
                                </ul>
                            </li>                                                  
                            <li class="link menu-timeline p-0"><a href="https://127.0.0.1:8000/#hebergement"><span data-hover="Hebergement">{% trans %}Hebergement{% endtrans %}</span></a></li>         
                            <li class="link menu-timeline p-0"><a href="https://127.0.0.1:8000/#contact"><span data-hover="Contact">{% trans %}Contact{% endtrans %}</span></a></li>     
                        </ul>      
                    </div>
                </div> 
            </div>      
 
        </nav>  
        <div id="burger-wrapper" class="parallax-wrap">
            <div id="menu-burger" class="parallax-element">
                <span class="bg-dark"></span>
                <span class="bg-dark"></span>
            </div>
        </div> 

    </div>
</header>

    <script src="{{asset('assets/js/jquery.min.js')}}"></script> 
    <script> 
        $(document).ready(function(){
            $(window).scroll(function() {
                var nav = $('#mynav');
                var btn = $('#button');

                if ($(window).scrollTop() >= 100) { // Changez cette valeur selon vos besoins
                    nav.addClass("bg-white");
                    nav.addClass("header-shadow");
                    btn.addClass('show');
                } else {
                    nav.removeClass("bg-white");
                    nav.removeClass("header-shadow");
                    btn.removeClass('show');
                }
            });
            $('#button').click(function() {
                $('html, body').animate({
                    scrollTop: 0
                });  
            });
    
        });
    </script>
    