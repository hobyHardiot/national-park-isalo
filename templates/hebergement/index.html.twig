                                    <label for="people">Occupant(s) :</label>
                                    <input onChange="calculateTotal()" class="form-control w-25" type="number" id="people" name="people" min="1" value="1">
                                </div>
                                <div class="col  m-0 d-flex  flex-row align-items-center gap-2"> 
                                    <label for="paymentOption">Option de paiement :</label>
                                    <select onChange="calculateTotal()" class="form-select w-50" id="paymentOption" name="paymentOption">
                                        <option value="Payer au total">Payer au total</option>
                                        <option value="Payer une avance">Payer une avance</option>
                                    </select>
                                </div>                                 
                                <div class="col  m-0  d-flex flex-row align-items-center"> 
                                    <form action="{{path('app_checkout')}}" method="POST"> 
                                        <input type="hidden" name="totalPrice" id="totalPriceInput">
                                        <input type="hidden" name="selectLabel" id="selectLabelInput">
                                        <input type="hidden" name="paymentLabel" id="paymentLabelInput">
                                        <button disabled type="submit" id="verify-btn" class="btn btn-primary">Payer</button> 
                                    </form> 
                                </div>
