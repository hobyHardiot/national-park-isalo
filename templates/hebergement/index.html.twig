                            <script> 
                            var differenceDays;
                            var verifyBtn = document.getElementById('verify-btn');
                            flatpickr("#date-range", {
                                mode: "range", // Activer le mode plage de dates
                                dateFormat: "d/m/Y", // Format de date (jour/mois/année)
                                locale: "fr", // Utiliser la traduction française
                                onChange: function(selectedDates, dateStr, instance) {
                                    if(selectedDates.length === 2) { 
                                        var startDate = selectedDates[0];
                                        var endDate = selectedDates[1]; 
                                        var differenceMs = Math.abs(endDate - startDate); 
                                        differenceDays = Math.ceil(differenceMs / (1000 * 60 * 60 * 24));  
                                         
                                        verifyBtn.removeAttribute('disabled');

                                    }else{      
                                        verifyBtn.setAttribute('disabled', 'disabled');
                                    }
                                }
                            });
                            function calculateTotal() {
                                var duration = differenceDays; 
                                var people = parseInt(document.getElementById("people").value); 
                                var paymentOption = document.getElementById("paymentOption").value; 
                                 


                                var basePrice = 50 * duration;  
                                var peoplePrice = (people - 1) * basePrice;   
                                
                                var totalPrice = 0;
                                
                                if (paymentOption === "Payer au total") {
                                    totalPrice = basePrice + peoplePrice;
                                } else if (paymentOption === "Payer une avance") {
                                    // Si l'utilisateur choisit de payer une avance, le prix total est réduit de 50%
                                    totalPrice = (basePrice + peoplePrice) * 0.5; 
                    
                                }  
 

                                document.getElementById("totalPriceInput").value = totalPrice; 
                                document.getElementById("selectLabelInput").value = paymentOption;  
                                document.getElementById("paymentLabelInput").value = people + " personne(s) pour " + duration + " jours"; 
                            } 
                            document.getElementById("calculate-button").addEventListener("click", calculateTotal);
                            </script>
