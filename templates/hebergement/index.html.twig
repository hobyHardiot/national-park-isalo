                                <div class="col  m-0 flex-column align-items-start gap-2"> 
                                    <input onChange="calculateTotal()" onmouseleave="calculateTotal()" style="text-align:center" class="text-secondary" type="text" id="date-range" placeholder="Sélectionnez une plage de dates">
                                </div>
